{
    "extends": "@sapphire/ts-config",
	"compilerOptions": {
		"rootDir": "src",
		"outDir": "dist",
		"tsBuildInfoFile": "dist/.tsbuildinfo",
        "module": "ESNext",
		"target": "ESNext",
        "moduleResolution": "Node", 
		"lib": ["ESNext", "DOM"],
        "allowSyntheticDefaultImports": true
	},
	"include": ["src"]
}